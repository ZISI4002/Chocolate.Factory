<Window x:Class="Chocolate.Factory.Views.SaveCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chocolate.Factory.Views"
        mc:Ignorable="d"
        Title="SaveCarWindow" Height="auto" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="5*"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Label Content="Car Type:" Margin="10,10,0,0"></Label>
           
            <ComboBox Margin="10" ItemsSource="{Binding CarTypes }" SelectedValue="{Binding CarModel.CarType}"></ComboBox>


            <Label Content="Brand Name:" Margin="10,10,0,0"></Label>
            <TextBox Margin="10" Text="{Binding CarModel.BrandName}"></TextBox>

            <Label Content="Serial Number:" Margin="10,10,0,0"></Label>
            <TextBox Margin="10" Text="{Binding CarModel.SerialNumber}"></TextBox>

            <Label Content="Use Period (Years):" Margin="10,10,0,0"></Label>
            <TextBox Margin="10" Text="{Binding CarModel.UsePeriod}"></TextBox>

            <Label Content="Purchase Date:" Margin="10,10,0,0"></Label>
            <DatePicker Margin="10" SelectedDate="{Binding CarModel.PurchaseDate}"></DatePicker>

            <Border Margin="10,10,10,10">
                <Button Content="Save" Command="{Binding SaveCar}" Style="{StaticResource btnAdd}">
                </Button>
            </Border>
        </StackPanel>
    </Grid>
</Window>
