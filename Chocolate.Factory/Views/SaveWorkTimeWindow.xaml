<Window x:Class="Chocolate.Factory.Views.SaveWorkTimeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chocolate.Factory.Views" xmlns:viewmodels="clr-namespace:Chocolate.Factory.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:SaveWorkTimeViewModel}"
        mc:Ignorable="d"
        Title="SaveWorkTimeWindow" Height="600" Width="800">
    <Grid Margin="0,0,0,-120">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="5*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="9*"></RowDefinition>
            <RowDefinition Height="0*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Margin="114,40,114,-4" Grid.RowSpan="3" Grid.ColumnSpan="3">
            <!-- ThisDay (Дата) -->
            <Label Content="Date:" Margin="10,10,0,0"></Label>
            <DatePicker Margin="10" SelectedDate="{Binding WorkTimeModel.ThisDay}"></DatePicker>

            <!-- StartTime (Время начала) -->
            <Label Content="Start Time:" Margin="10,10,0,0"></Label>
            <StackPanel Orientation="Horizontal" Margin="10">
                <ComboBox Width="60" ItemsSource="{Binding StartHours}" SelectedValue="{Binding StartHour}" />
                <TextBlock Text=":" VerticalAlignment="Center" Margin="5,0"/>
                <ComboBox Width="60" ItemsSource="{Binding StartMinutes}" SelectedValue="{Binding StartMinute}" />
            </StackPanel>

            <!-- StopTime (Время окончания) -->
            <Label Content="Stop Time:" Margin="10,10,0,0"></Label>
            <StackPanel Orientation="Horizontal" Margin="10">
                <ComboBox Width="60" ItemsSource="{Binding StopHours}" SelectedValue="{Binding StopHour}" />
                <TextBlock Text=":" VerticalAlignment="Center" Margin="5,0"/>
                <ComboBox Width="60" ItemsSource="{Binding StopMinutes}" SelectedValue="{Binding StopMinute}" />
            </StackPanel>

           
            <Label Content="Production:" Margin="10,10,0,0"></Label>
            <TextBox Margin="10" Text="{Binding WorkTimeModel.Production}"></TextBox>

            <!-- IsInspected (Проверено) -->
            <Label Content="Inspected:" Margin="10,10,0,0"></Label>
            <CheckBox Margin="10" IsChecked="{Binding WorkTimeModel.IsInspected}"></CheckBox>

            <!-- Machine (Машина) -->
            <Label Content="Machine:" Margin="10,10,0,0"></Label>
            <ComboBox Margin="10"
ItemsSource="{Binding Machines}"
SelectedValue="{Binding SelectedMachineId, Mode=TwoWay}"
SelectedValuePath="Id"
DisplayMemberPath="SerialNumber" />
            <Border Margin="10,10,10,10">
                <Button Content="Save" Command="{Binding SaveWorkTime}" Style="{StaticResource btnAdd}">
                </Button>
            </Border>
        </StackPanel>
    </Grid>

</Window>
