<Window x:Class="Chocolate.Factory.Views.SaveProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chocolate.Factory.Views" xmlns:viewmodels="clr-namespace:Chocolate.Factory.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:SaveProductViewModel}"
        mc:Ignorable="d"      
        Title="Save Product Window" Height="420" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="5*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="8*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="1" >
            <Label Content="Name:" Margin="10,10,0,0"></Label>
            <TextBox Margin="10" Text="{Binding ProductModel.Name}"></TextBox>

            <Label Content="CompanyName:" Margin="10,10,0,0"></Label>
            <TextBox Margin="10" Text="{Binding ProductModel.CompanyName}"></TextBox>

            <Label Content="StandartWeight(gr):" Margin="10,10,0,0"></Label>
            <TextBox Margin="10" Text="{Binding ProductModel.StandartWeight}"></TextBox>


            <Border Margin="10,10,10,10" >
                <Button Content="Save" Command="{Binding SaveProduct}" Style="{StaticResource btnAdd}">
                </Button>
            </Border>
        </StackPanel>
    </Grid>
</Window>