<Window x:Class="Chocolate.Factory.Views.SaveIngredientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chocolate.Factory.Views"
                mc:Ignorable="d"      
        Title="Save Ingredient Window" Height="420" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="5*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="8*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="1" >
            <Label Content="Name:" Margin="10,10,0,0"></Label>
            <TextBox Margin="10" Text="{Binding IngredientModel.Name}"></TextBox>

            <Label Content="UseTime:" Margin="10,10,0,0"></Label>
            <ComboBox Margin="10" ItemsSource="{Binding UseTimes }" SelectedValue="{Binding IngredientModel.UseTime}"></ComboBox>
            
            <Label Content="InStock(kq):" Margin="10,10,0,0"></Label>
            <TextBox Margin="10" Text="{Binding IngredientModel.InStock}"></TextBox>


            <Border Margin="10,10,10,10" >
                <Button Content="Save" Command="{Binding SaveIngredient}" Style="{StaticResource btnAdd}">
                </Button>
            </Border>
        </StackPanel>
    </Grid>
</Window>