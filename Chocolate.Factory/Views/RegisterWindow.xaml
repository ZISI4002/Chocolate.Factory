<Window x:Class="Chocolate.Factory.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chocolate.Factory.Views"
        mc:Ignorable="d"
        Title="Register Window" Height="480" Width="500" Background="Transparent" FocusManager.FocusedElement="{Binding ElementName=txtUsername}"
        AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="CenterScreen">

    <Border CornerRadius="12" BorderThickness="20" BorderBrush="#ffffff" Margin="25">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="15" />
        </Border.Effect>
        <Grid Background="#FFFFFF">

            <!-- Кнопка закрытия -->
            <Button x:Name="btnClose"
                    Content="✖"
                    Width="30" Height="30"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Margin="0,10,10,0"
                    Background="Transparent" Foreground="#FFC2C2C2"
                    FontSize="16" FontWeight="Bold"
                    BorderThickness="0" Cursor="Hand"
                    Command="{Binding Close}">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" />
                </Button.Effect>
            </Button>

            <!-- Кнопка назад (стрелка влево) -->
            <Button Width="40" Height="40"
        HorizontalAlignment="Left" VerticalAlignment="Top"
        Margin="10"
        Background="Transparent" BorderThickness="0"
        Cursor="Hand"
        Command="{Binding GoBack}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Path x:Name="arrow"
                      Data="M 25,5 L 10,20 L 25,35"
                      Stroke="Black"
                      StrokeThickness="3"
                      StrokeStartLineCap="Round"
                      StrokeEndLineCap="Round" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="arrow" Property="Stroke" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>


            <!-- Основное содержимое окна -->
            <StackPanel>
                <Label Content="Welcome!" HorizontalAlignment="Center" FontFamily="Times New Roman" FontSize="45" Height="80" Margin="0,0,0,30" Background="#00000000" >
                    <Label.Effect>
                        <DropShadowEffect BlurRadius="100"/>
                    </Label.Effect>
                </Label>

                <TextBlock Text="Username" Background="#ffffff" FontFamily="Times New Roman" FontSize="24"  Margin="10,0,0,0"/>
                <TextBox x:Name="txtUsername" Margin="10,0,0,0" BorderThickness="0" Text="{Binding RegisterModel.Username}" Focusable="True"
                         Foreground="Black"   Style="{x:Null}" FontFamily="Century Gothic" FontSize="24">
                    <TextBox.InputBindings>
                        <KeyBinding Command="{Binding Path=Register}" CommandParameter="{Binding ElementName=txtPassword}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <Separator BorderBrush="#60444444" Margin="10"/>

                <TextBlock Text="Password" Background="#ffffff" FontFamily="Times New Roman" FontSize="24"  Margin="10,0,0,0"/>
                <PasswordBox Margin="10,0,0,0" x:Name="txtPassword"
                             Background="#ffffff" BorderThickness="0" BorderBrush="#FF8A2525" 
                             Foreground="Black" FontFamily="Century Gothic" FontSize="24">
                    <PasswordBox.InputBindings>
                        <KeyBinding Command="{Binding Register}" CommandParameter="{Binding ElementName=txtPassword}" Key="Enter" Gesture="Enter"/>
                    </PasswordBox.InputBindings>
                </PasswordBox>
                <Separator BorderBrush="#60444444" Margin="5"/>

                <Border VerticalAlignment="Stretch" BorderThickness="5" CornerRadius="10"  Height="auto" Width="150">
                    <Button x:Name="login" FontSize="22" BorderThickness="0" Command="{Binding Register}" CommandParameter="{Binding ElementName=txtPassword}" 
                            Background="#FF333337"  FontFamily="Century Gothic" FontWeight="Bold" Content="Register" Style="{StaticResource BaseButton}" >
                        <Button.InputBindings>
                            <KeyBinding Key="Esc"/>
                        </Button.InputBindings>
                    </Button>
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</Window>
