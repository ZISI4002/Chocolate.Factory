<Window x:Class="Chocolate.Factory.Views.SaveDosageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chocolate.Factory.Views" xmlns:viewmodels="clr-namespace:Chocolate.Factory.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:SaveDosageViewModel}"
        mc:Ignorable="d"      
        Title="Save Dosage Window" Height="auto" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,-16">

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="5*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="8*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="1" Margin="0,40,0,8" Grid.RowSpan="3" >
            <Label Content="Quantity:" Margin="10,10,0,0"></Label>
            <TextBox Margin="10" Text="{Binding SelectedQuantity, UpdateSourceTrigger=PropertyChanged}"></TextBox>

            <Label Content="Deviation:" Margin="10,10,0,0"></Label>
            <TextBox Margin="10" Text="{Binding SelectedDeviation, UpdateSourceTrigger=PropertyChanged}"></TextBox>


            <Label Content="Product:" Margin="10,0,0,0"></Label>
            <ComboBox Margin="10"
          ItemsSource="{Binding Products}"
          SelectedValue="{Binding SelectedProductId, Mode=TwoWay}"
          SelectedValuePath="Id"
          DisplayMemberPath="Name" />
            
            <Label Content="Ingredient:" Margin="10,0,0,0"></Label>
            <ComboBox Margin="10"
          ItemsSource="{Binding Ingredients}"
          SelectedValue="{Binding SelectedIngredientId, Mode=TwoWay}"
          SelectedValuePath="Id"
          DisplayMemberPath="Name" />
            <Border Margin="10,10,10,10" >
                <Button Content="Save" Command="{Binding SaveDosage}" Style="{StaticResource btnAdd}">
                </Button>
            </Border>
        </StackPanel>
    </Grid>
</Window>